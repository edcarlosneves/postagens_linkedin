   "source": [
    "import pandas as pd\n",
    "import glob\n",
    "\n",
    "arquivos = glob.glob(\"dados/*.csv\")\n",
    "\n",
    "dfs = []\n",
    "for a in arquivos:\n",
    "    df = pd.read_csv(a)\n",
    "    df[\"arquivo_origem\"] = a\n",
    "    dfs.append(df)\n",
    "\n",
    "df_final = pd.concat(dfs)\n",
    "\n",
    "print(df_final.head())\n",
    "\n",
    "df_final.to_csv(\"resultado.csv\", index=False)"
   ]
